{
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-metadata": {
	    "site": "site.yaml",
	    "cv": "cv.yaml"
    },
    "metalsmith-markdown-metadata": {},
    "metalsmith-date-in-filename": {},
    "metalsmith-code-highlight": {},
    "metalsmith-collections": {
      "posts": {
        "pattern": "posts/**.html",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-permalinks": {
      "pattern": ":date/:title",
      "date": "YYYY/MM"
    },
    "metalsmith-date-formatter": { 
      "format": "YYYY-MM-DD"
    },
    "metalsmith-feed": {
      "collection": "posts"	
    },
    "metalsmith-sass": {},
    "metalsmith-layouts": { 
      "engine": "pug",
      "pretty": true
    },
    "metalsmith-debug": {},
    "metalsmith-serve": {},
    "metalsmith-watch": {
      "paths": {
        "${source}/**/*": true,
        "layouts/**/*": "**/*",
        "metalsmith.json": "**/*"
      } 
    } 
  }
}
