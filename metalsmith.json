{
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-metadata": {
	    "site": "site.yaml",
	    "cv": "cv.yaml"
    },
    "metalsmith-markdown-metadata": {},
    "metalsmith-collections": {
      "posts": {
        "pattern": "posts/**.html",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-sass": {},
    "metalsmith-permalinks": {
      "pattern": ":date/:title",
      "date": "yyyy"
    },
    "metalsmith-layouts": { 
      "engine": "pug",
      "pretty": true
    },
    "metalsmith-debug": {},
    "metalsmith-serve": {},
    "metalsmith-watch": {} 
  }
}
